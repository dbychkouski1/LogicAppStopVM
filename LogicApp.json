    "contentVersion": "1.0.0.0",
    "parameters": {
        "connections_gmail_name": {
    
            "type": "String"
        },
        "connections_azureautomation_name": {
   
            "type": "String"
        },
        "workflows_stopvm_name": {
         
            "type": "String"
        },
