                        }
                    },
                    "triggers": {
                        "When_a_new_email_arrives": {
                            "recurrence": {
                                "frequency": "Minute",
                                "interval": 3
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['gmail']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/Mail/OnNewEmail",
                                "queries": {
                                    "fetchOnlyWithAttachments": false,
                                    "importance": "All",
                                    "includeAttachments": false,
                                    "label": "INBOX",
                                    "starred": "All",
                                    "subject": "STOPVM"
                                }
                            }
                        }
                    },
                    "actions": {
                        "Create_job": {
                            "runAfter": {},
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azureautomation']['connectionId']"
                                    }
                                },
                                "method": "put",
                                
                                "path" :"/subscriptions/d44df320-a45f-4c85-a870-4ff0a789595c/resourceGroups/logic-aapp-stop/providers/Microsoft.Automation/automationAccounts/task9auto/jobs",
                                "queries": {
                                    "runbookName": "StopVM",
                                    "wait": false,
                                    "x-ms-api-version": "2015-10-31"
                                }
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "gmail": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('connections_gmail_name'))]",
                                "connectionName": "gmail",
                                "id": "/subscriptions/(parameters('suscriptionid')/providers/Microsoft.Web/locations/westeurope/managedApis/gmail"
                            },
                            "azureautomation": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('connections_azureautomation_name'))]",
                                "connectionName": "azureautomation",
                                "id": "/subscriptions/(parameters('suscriptionid')/providers/Microsoft.Web/locations/westeurope/managedApis/azureautomation"
                            }
                        }
                    }
                }
            },
            "dependsOn": [
