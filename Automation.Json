{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "accountName": {
            "type": "string"
        },
        "credentialName": {
            "type": "string"
        },
        "userName": {
            "type": "string"
        },
        "password": {
            "type": "securestring"
        },
        "jobId": {
            "type": "string"
        },
        "SasToken": {
            "type": "securestring"
        },
        "connections_gmail_name": {
            "defaultValue": "gmail",
            "type": "string"
        },
        "connections_azureautomation_name": {
            "defaultValue": "azureautomation",
            "type": "string"
        },
        "workflows_stopvm_name": {
            "defaultValue": "stopvm",
            "type": "string"
        },
        "SubscriptionID": {
            "type": "string"
        },
        "accountName": {
            "type": "string"
        }
    },
    "variables": {
        "runbookName": "Shutdown-ARM-VMs",
        "scriptUri": "[parameters('SasToken')]",
        "sku": "Free"
    },
    "resources": [
        {
            "name": "[parameters('accountName')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "sku": {
                    "name": "[variables('sku')]"
                }
            },
            "resources": [
                {
                    "name": "[variables('runbookName')]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ],
                    "tags": {},
                    "properties": {
                        "runbookType": "Script",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "publishContentLink": {
                            "uri": "[variables('scriptUri')]",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "name": "[parameters('credentialName')]",
                    "type": "credentials",
                    "apiVersion": "2015-10-31",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ],
                    "tags": {},
                    "properties": {
                        "userName": "[parameters('userName')]",
                        "password": "[parameters('password')]"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Logic/workflows",
            "name": "[parameters('workflows_stopvm_name')]",
            "apiVersion": "2017-07-01",
            "location": "westeurope",
            "tags": {},
            "scale": null,
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "When_a_new_email_arrives": {
                            "recurrence": {
                                "frequency": "Minute",
                                "interval": 3
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['gmail']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/Mail/OnNewEmail",
                                "queries": {
                                    "fetchOnlyWithAttachments": false,
                                    "importance": "All",
                                    "includeAttachments": false,
                                    "label": "INBOX",
                                    "starred": "All",
                                    "subject": "STOPVM"
                                }
                            }
                        }
                    },
                    "actions": {
                        "Create_job": {
                            "runAfter": {},
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azureautomation']['connectionId']"
                                    }
                                },
                                "method": "put",
                                
                                "path" :"/subscriptions/d44df320-a45f-4c85-a870-4ff0a789595c/resourceGroups/logic-aapp-stop/providers/Microsoft.Automation/automationAccounts/task9auto/jobs",
                                "queries": {
                                    "runbookName": "StopVM",
                                    "wait": false,
                                    "x-ms-api-version": "2015-10-31"
                                }
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "gmail": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('connections_gmail_name'))]",
                                "connectionName": "gmail",
                                "id": "/subscriptions/(parameters('suscriptionid')/providers/Microsoft.Web/locations/westeurope/managedApis/gmail"
                            },
                            "azureautomation": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('connections_azureautomation_name'))]",
                                "connectionName": "azureautomation",
                                "id": "/subscriptions/(parameters('suscriptionid')/providers/Microsoft.Web/locations/westeurope/managedApis/azureautomation"
                            }
                        }
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_gmail_name'))]",
                "[resourceId('Microsoft.Web/connections', parameters('connections_azureautomation_name'))]"
            ]
        }
    ]
}
